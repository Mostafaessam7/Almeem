@model IEnumerable<OrderToReturnDto>

<div class="container mt-4">
    
    <h2 class="text-center h2">All Orders</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.Status</td>
                        <td>@order.Total.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>